<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <RelativeLayout
        android:id="@+id/home_rightPanel"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        >
        <RelativeLayout
            android:id="@+id/home_controllerMenu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_vertical"
            >

            <ImageButton
                android:id="@+id/home_controllerSelect"
                android:layout_alignParentStart="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@drawable/ic_menu_black"
                />

            <TextView
                android:layout_toRightOf="@id/home_controllerSelect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:text="Controller"
                />
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_more_vert_black"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <FrameLayout
            android:layout_below="@id/home_controllerMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_leftPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/home_rightPanel"
        >

    </RelativeLayout>

</RelativeLayout>